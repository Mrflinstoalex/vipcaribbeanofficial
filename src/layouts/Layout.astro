---
import Footer from "@/components/Footer";
import "../styles/global.css";
import HeaderWrapper from "@/components/HeaderWrapper.astro";
import Analytics from "@vercel/analytics/astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
import { getPageInfo } from "@/lib/wp";
import {
  ClientRouter
} from 'astro:transitions';
const footerPage = await getPageInfo("footer");
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- SEO -->
    <title>VIP Caribbean | Agencia de Empleo en Cruceros - Santo Domingo</title>
    <meta
      name="description"
      content="VIP Caribbean es la agencia líder en República Dominicana para conseguir trabajo en cruceros. Conectamos talento dominicano con Disney Cruise Line, Virgin Voyages, Costa Crociere y más."
    />
    <meta name="author" content="VIP Caribbean" />
    <meta
      name="keywords"
      content="trabajo cruceros, empleo cruceros, agencia empleo cruceros, trabajo en barcos, Disney Cruise Line, Virgin Voyages, Santo Domingo"
    />
    <link rel="canonical" href="https://vipcaribbean.com" />

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="VIP Caribbean | Tu Carrera en Cruceros Comienza Aquí"
    />
    <meta
      property="og:description"
      content="Conectamos talento dominicano con las mejores líneas de cruceros del mundo. Más de 500 profesionales colocados exitosamente."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://lovable.dev/opengraph-image-p98pqg.png"
    />
    <meta property="og:url" content="https://vipcaribbean.com" />
    <meta property="og:locale" content="es_DO" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="VIP Caribbean | Agencia de Empleo en Cruceros"
    />
    <meta
      name="twitter:description"
      content="Tu puerta de entrada a una carrera emocionante en cruceros internacionales."
    />
    <meta
      name="twitter:image"
      content="https://lovable.dev/opengraph-image-p98pqg.png"
    />

    <!-- Favicon -->
         <ClientRouter />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body>
    <div class="min-h-screen bg-background">
      <HeaderWrapper />
      <slot />
      <Footer acf={footerPage.acf} />
    </div>
    <!-- Si quieres cargar un script, Astro recomienda: -->
    <!-- <script type="module" src="/src/main.tsx"></script> -->
    <SpeedInsights/>
    <Analytics />
  </body>
</html>
